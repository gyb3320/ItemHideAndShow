<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dial_up_panel" >
	<FrameLayout 
	    android:id="@+id/fl_boder_head"
	    android:layout_height="140dp"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp">
	    <RelativeLayout 
	        android:id="@+id/rl_boder_head"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginTop="20dp">
	        <LinearLayout 
	            android:id="@+id/ll_head_content"
	            android:layout_width="match_parent"
	            android:layout_height="60dp"
	            android:layout_alignParentTop="true"
	            android:layout_marginTop="10dp"
	            android:orientation="vertical"
	            android:background="@drawable/bg_contacts_infoback">
	            <TextView 
	                android:id="@+id/tv_name"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="90dp"
	                android:layout_marginTop="2dp"
	                android:textColor="#333333"
	                android:textSize="18sp"
	                android:text="张三"/>
	            <TextView 
	                android:id="@+id/tv_number"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="90dp"
	                android:layout_marginTop="5dp"
	                android:textColor="#999999"
	                android:textSize="14dp"
	                android:text="1036"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/ll_head_bottom"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_below="@id/ll_head_content"
	            android:background="@drawable/btn_contacts_info_right_normal_all"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:orientation="horizontal">
	            <TextView
                    android:id="@+id/tv_info_call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/btn_contacts_info_call"
                    android:text="呼叫电话"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/img_separation1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/line_separation" />

                <TextView
                    android:id="@+id/tv_info_send_mail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/btn_contacts_info_mail_and_msg"
                    android:text="发送邮件"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/img_separation2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/line_separation" />

                <TextView
                    android:id="@+id/tv_info_send_msg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/btn_contacts_info_mail_and_msg"
                    android:text="发送短信"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/img_separation3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/line_separation" />

                <TextView
                    android:id="@+id/tv_info_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/btn_contacts_info_edit_details"
                    android:text="编辑信息"
                    android:textColor="#FFFFFF" />
	        </LinearLayout>
	    </RelativeLayout>    
	    <ImageView 
	        android:id="@+id/iv_photo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/icon_avatar_default_big"/>
	</FrameLayout>
	<LinearLayout
        android:id="@+id/ll_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_boder_head"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_contacts_info_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="职位："
                android:textColor="#999999" />

            <TextView
                android:id="@+id/tv_user_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="总裁"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="电话："
                android:textColor="#999999" />

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15036309023" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="邮箱："
                android:textColor="#999999" />

            <TextView
                android:id="@+id/tv_user_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xuyanhu@163.com" />
        </LinearLayout>
    </LinearLayout>
    
	<LinearLayout
        android:id="@+id/Layout_linear_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_contact_info"
        android:layout_alignRight="@id/ll_contact_info"
        android:layout_below="@id/ll_contact_info"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_contacts_info_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="通话记录"
            android:textColor="#999999" />

        <ImageView
            android:id="@+id/img_line_sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/line_sep" />

        <ListView
            android:id="@+id/lv_call_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</RelativeLayout>